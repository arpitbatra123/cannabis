{% assign metatitle = site.title %}
{% if title %}
  {% assign metatitle = metatitle | prepend: " â€¢ " | prepend: title %}
{% endif %}
{% if isHomepage %}
  {% assign metatitle = homeTitle %}
{% endif %}
{% assign metadesc = site.desc %}
{% if snippet %}
  {% assign metadesc = snippet %}
{% endif %}
{% assign metatype = "article" %}

<meta charset="UTF-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta http-equiv="X-UA-Compatible" content="ie=edge"/>

<link rel="shortcut icon" href="/assets/logo.svg" type="image/x-icon"/>

<title>{{- metatitle -}}</title>

<meta name="description" content="{{- metadesc -}}"/>
<link rel="canonical" href="{{ page.url | prepend: site.baseurl }}"/>

<meta property="og:title" content="{{-metatitle-}}"/>
<meta property="og:type" content="{{-metatype-}}"/>
<meta property="og:url" content="{{ page.url | prepend: site.baseurl }}"/>
<meta property="og:image" content="/assets/avatar.png"/>
<meta property="og:description" content="{{- metadesc -}}"/>


<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image"/>
<meta property="twitter:url" content="{{ page.url | prepend: site.baseurl }}"/>
<meta property="twitter:title" content="{{-metatitle-}}"/>
<meta property="twitter:description" content="{{- metadesc -}}"/>
<meta property="twitter:image" content="/assets/avatar.png"/>


{% if addStructuredData %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Article",
      "headline": "{{title}}",
      "image": ["{{ imagePath }}"],
      "datePublished": "{{ date | date: '%B %e, %Y' }}",
      "dateModified": "{{ date | date: '%B %e, %Y' }}",
      "author": [
        {
          "@type": "Person",
          "name": "Canapa"
        }
      ]
    }
  </script>
{% endif %}


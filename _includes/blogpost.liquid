<!DOCTYPE html>
{% if locale == "en" %}
<html lang="en">
{% else %}
<html lang="it">
{% endif %}

<head>
    <title>{{title}}</title>
    {% include 'head.html' %}
    <link rel="stylesheet" href="/styles/blogpost.css">
</head>

<body>
    {% include 'theme' %}
    {% include 'header' %}
    <main>
        <div class="content">
            <p class="date">{{ date | date: '%B %e, %Y' }}</p>
            <h1 class="title">{{title}}</h1>
            <img src="/assets/{{imagePath }}" alt="" class="post-image">
            <div class="tags">
                {% assign tagsList = tags | removeDefaultTags %}
                {% for tag in tagsList %}
                <a href="/tags/{{tag}}" class="tag">#{{tag}}</a>
                {% endfor %}
            </div>
            <div class="text">{{content}}</div>
            {% if locale == "en" %}
            <a class="backlink" href="/en/blog"><img src="/assets/back.svg"> View All Articles</a>
            {% else %}
            <a class="backlink" href="/blog"><img src="/assets/back.svg"> View All Articles</a>
            {% endif %}
            <div class="similar-articles | flow">
                {% assign tagsListToFilter = tags %}
                {% assign relatedPosts = collections.posts | filterRelated: tagsListToFilter, page.url %}
                {% if relatedPosts.size > 0 %}
                <h3 class="similar">Similar Articles:</h3>
                {% for post in relatedPosts %}
                <div class="post">
                    <div class="left">
                        <img src="/assets/{{ post.data.imagePath }}" alt="">
                    </div>
                    <div class="right">
                        <div class="top">
                            <p class="date">{{ post.date | date: '%B %e, %Y' }}</p>
                            <a href="{{ post.url }}">
                                <h2>{{ post.data.title }}</h2>
                            </a>
                            <p class="snippet">{{ post.data.snippet }}</p>
                        </div>
                        <div class="tags">
                            {% assign tagsList = post.data.tags | removeDefaultTags %}
                            {% for tag in tagsList %}
                            <a href="/tags/{{tag}}" class="tag">#{{tag}}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endfor %}
                {% endif %}
            </div>
        </div>
    </main>
    <footer class="page-footer">
        <div class="container">
            <small>Copyright <b>{{site.author}}</b></small>
        </div>
    </footer>
    <div class="overlay" id="main_overlay" onclick="toggleSidebar()"></div>
    <aside id="sidebar">
        <a href="javascript:toggleSidebar()" class="icon-btn" title="Close"><svg class="icon">
                <use href="/assets/cross.svg#content" />
            </svg></a>
        {% include 'menu' %}
    </aside>
</body>

</html>
---
noIndex: true
navOptions:
  allowMissing: false
  includeSelf: true
---

<!DOCTYPE html>

{% if locale == "en" %}
<html lang="en">
{% else %}
<html lang="it">
{% endif %}

<head>
    {% include 'head' %}
    <meta name="robots" content="noindex" />
    <link rel="stylesheet" href="/styles/tagged-posts.css">
</head>

<body>
    {% include 'theme' %}
    {% include 'header' %}
    <main class="blog-content flow">
        {% include 'categories' %}
        <div class="blog-content-right">
            <div class="breadcrumbs">
                {% assign navPages = collections.all | eleventyNavigationBreadcrumb: title, navOptions %}
                {% include 'breadcrumbs' %}
            </div>
            <h1 class="title">{{ title }}</h1>
            <p class="subtitle">Vedi i seguenti articoli</p>
            {{content}}
        </div>
    </main>
    {% include 'footer' %}
    <div class="overlay" id="main_overlay" onclick="toggleSidebar()"></div>
    <aside id="sidebar">
        <a href="javascript:toggleSidebar()" class="icon-btn" title="Close"><svg class="icon">
                <use href="/assets/cross.svg#content" />
            </svg></a>
        {% include 'menu' %}
    </aside>
</body>

</html>
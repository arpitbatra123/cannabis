<!DOCTYPE html>
<html lang="it">

<head>
    {% include 'head.html' %}
    <link rel="stylesheet" href="/styles/about.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <header class="page-header">
        <div class="container">
            <a href="javascript:toggleSidebar()" class="icon-btn" title="Menu" id="menu_btn"><svg class="icon">
                    <use href="/assets/bars.svg#content" />
                </svg></a>
            <img width="48" height="48" class="logo" src="/assets/logo.svg" alt="">
            <nav>

                <a href="/" class="menu-item">Home</a>
                <a href="/about" class="menu-item">About</a>
                <a href="/contact" class="menu-item">Contact</a>
                <a href="/blog" class="menu-item">Blog</a>

            </nav>
        
            
                    <input type="search" id="searchbar" class="searchbar" placeholder="Search" />
                <a href="javascript:toggleSearchBar()">
                    <i class="fa fa-search fa-lg"></i>
                </a>
                <a id="theme_switch" class="icon-btn" href="javascript:toggleTheme()" title="Change theme"><svg class="icon">
                    <use href="/assets/moon.svg#content" />
                </svg></a>
               

        </div>
    </header>

<body>

    <div class="main">

        {% for post in collections.posts reversed %}

        <div class="cont">
            <div class="lef">

                <div class="desc">
                <a id="title" href="{{ post.url }}">
                    <h4> {{ post.data.title }} </h4>
                </a>
                <p>{{ post.data.snippet }}</p>
                </div>
                <div class="pop">
                   <div class="tag__con"> 
                    {% for tag in post.data.tags %}
                        <p><a href="/tags/{{tag}}" class="tag">#{{tag}}</a></p>
                    {% endfor %}
                   </div> 
                    
                    <p class="date">{{ post.date | date: '%B %e, %Y' }}</p>
                </div>

            </div>
            <div class="righ" style="background-image: url('/assets/{{ post.data.imagePath }}') ;">

            </div>
        </div>
        <hr class="hr" />
        {% endfor %}
    </div>

</body>
</html>